<% if product = Product.find_by(id: product_id) %>
<tr>
    <td>
        <%= image_tag product.image.tiny %>
     </td>
    <td>
        <h4><%= product.name %></h4>
        <br>
        <p><%= product.description %></p>
    </td>
    <td>
        <%= humanized_money_with_symbol product.price %>
    </td>
    <td>
        <%= humanized_money_with_symbol line_total %>
    </td>
</tr>

<% end %>